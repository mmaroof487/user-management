<!DOCTYPE html>
<html lang="en">
 <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
 </head>
 <body>
  <main class="bg-zinc-900 w-full h-full p-10 text-white">
   <a href="/" class="inline-block cursor-pointer bg-blue-500 rounded-lg px-3 py-2 my-4">Home</a>
   <h1 class="text-2xl p-2">Users</h1>
   <sec class="flex gap-5 flex-wrap">
    <% user.forEach((val)=>{ %>
    <div class="bg-zinc-800 w-72 p-4 rounded-lg">
     <div class="w-full bg-blue-500 rounded-lg h-52"></div>
     <h3 class="text-lg font-bold"><%=val.name%></h3>
     <h4 class="text-zinc-500"><%=val.email%></h4>
     <div class="flex gap-4 mt-6">
      <a href="/edit/<%=val.email%>" class="text-sm text-zinc-500">Edit User</a>
      <a href="/delete/<%=val.email%>" class="text-red-500 text-sm">Delete User</a>
     </div>
    </div>
    <% }) %>
   </sec>
  </main>
 </body>
</html>
